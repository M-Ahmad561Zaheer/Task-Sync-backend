{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/auth/(.*)", "destination": "server.js" },
    { "source": "/api/tasks/(.*)", "destination": "server.js" },
    { "source": "/(.*)", "destination": "server.js" }
  ]
}